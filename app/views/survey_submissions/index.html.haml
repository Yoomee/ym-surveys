.btn-group.pull-right.mv-1
  =link_to "Download as CSV", survey_survey_submissions_path(:format =>  "csv"), :class => 'btn', :icon => 'arrow-down'

%table.table
  %thead
    %tr
      %th Date
      %th Name
      %th Actions
  %tbody
    -@survey_submissions.each do |submission|
      %tr
        %td=submission.created_at.strftime("%d %b %Y, %H:%M")
        %td="#{submission.user.first_name} #{submission.user.last_name}"
        %td=link_to("View", survey_survey_submission_path(submission.survey, submission))